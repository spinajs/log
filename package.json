    "@types/glob-to-regexp": "^0.4.1",
    "@types/lodash": "^4.14.136",
    "@types/luxon": "^2.0.8",
    "@types/mocha": "^5.2.7",
    "@types/node": "^17.0.8",
    "@types/node-schedule": "^1.3.2",
    "@types/sinon": "^10.0.6",
    "chai": "^4.2.0",
