{
  "name": "@spinajs/log",
  "version": "1.0.2",
  "description": "Log lib for all spinejs related libs",
  "main": "lib/index.js",
  "private": false,
  "scripts": {
    "test": "ts-mocha -p tsconfig.json test/**/*.test.ts",
    "coverage": "nyc npm run test",
    "build-docs": "rimraf docs && typedoc --options typedoc.json src/",
    "build": "tsc",
    "prepare": "npm run build",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "author": "SpinaJS <spinajs@coderush.pl> (https://github.com/spinajs/log)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/spinajs/log/issues"
  },
  "homepage": "https://github.com/spinajs/log#readme",
  "dependencies": {
    "@spinajs/configuration": "^1.0.4",
    "@spinajs/di": "^1.0.3",
    "@spinajs/exceptions": "^1.0.0",
    "bunyan": "^1.8.12",
    "chalk": "^3.0.0",
    "lodash": "^4.17.14"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.6",
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/chai-subset": "^1.3.3",
    "@types/lodash": "^4.14.136",
    "@types/mocha": "^5.2.7",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-subset": "^1.6.0",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "ts-mocha": "^6.0.0",
    "ts-node": "^8.3.0",
    "tslint": "^5.20.1",
    "tslint-circular-dependencies": "^0.1.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-no-unused-expression-chai": "^0.1.4",
    "typedoc": "^0.14.2",
    "typescript": "^3.5.3"
  }
}
